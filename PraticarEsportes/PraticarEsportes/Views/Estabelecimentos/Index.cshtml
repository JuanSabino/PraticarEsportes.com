@model IEnumerable<PraticarEsportes.Models.Estabelecimento>

@{
    Layout = "~/Views/Shared/FullPage.cshtml";
    ViewBag.Title = "Estabalecimentos Esportivos";
}

<h2>Estabalecimentos Esportivos</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Endereco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CEP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Senha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Habilitado)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.NomeFantasia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RazaoSocial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CNPJ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TelComercial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataAbertura)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Endereco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CEP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Senha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Habilitado)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.NomeFantasia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RazaoSocial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CNPJ)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TelComercial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataAbertura)
        </td>
        <td>
            @{
                if (item.PessoaId.ToString() != Session["Id"].ToString())
                {
                    var segue = false;
                    if (ViewBag.Seguindo != null)
                    {
                        foreach (var p1 in ViewBag.Seguindo)
                        {
                            if (p1.PessoaId == item.PessoaId)
                            {
                                segue = true;
                                break;
                            }
                        }
                    }
                    if (segue)
                    {
                        <a href="/Estabelecimentos/Index">
                            <img src="~/Content/img/user_del.png" title="Deixar de seguir Estabelecimento" />
                        </a>
                    }
                    else
                    {
                        <a href="/Estabelecimentos/Follow/@item.PessoaId">
                            <img src="~/Content/img/user_add.png" title="Seguir Estabelecimento" />
                        </a>
                    }

                }
            }

        </td>
    </tr>
}

</table>
