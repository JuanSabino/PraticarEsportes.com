@model PraticarEsportes.Models.Praticante
@{
    ViewBag.Title = "Denuncia";
}

<h2>Denuncia</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <h3 class="text-center">@ViewBag.Error</h3>

        <div>Você está denunciando @Html.DisplayNameFor(model => model.Nome) :<br /></div>

        <div class="form-group">
            <label class="control-label col-md-2">
                Digite o motivo da denúncia:
            </label>            
            <div class="col-md-10">
                <textarea class="form-control text-box multi-line" id="Motivo" name="Motivo" rows="20"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enviar" class="btn btn-default" />
            </div>
        </div>
    </div>
}
