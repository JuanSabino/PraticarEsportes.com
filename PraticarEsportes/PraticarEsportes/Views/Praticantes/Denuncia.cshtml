@model PraticarEsportes.Models.Praticante
@{
    Layout = "~/Views/Shared/FullPage.cshtml";
    ViewBag.Title = "Denuncia de Praticantee";
}

<div class="container">
    <h2>Denuncia</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            <h3 class="text-center">@ViewBag.Error</h3>

            <div><h3>Você está denunciando @Model.Nome</h3></div>

            <div class="form-group">
                <label class="control-label col-md-2">
                    Digite o motivo da denúncia:
                </label>
                <textarea class="form-control input-xlarge" id="Motivo" name="Motivo" rows="5" cols="20"></textarea>
                @*<div class="form-group">
                    
                </div>*@
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Enviar" class="btn btn-green raised" />
                </div>
            </div>
        </div>
    }
</div>